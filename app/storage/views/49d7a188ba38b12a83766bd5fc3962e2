      </div>
    </div>
    <?php $kounter = 2; ?>
  <?php endif; ?>
  <!-- / if text-area -->

  <!-- if label -->
  <?php if( $r->ft_type == 'Label' ): ?>

    <div class="clr"></div>

    <div class="col-md-12"><h4><?php echo $r->ft_label; ?></h4></div>
    <?php echo Form::hidden('cmfkeys['.$r->ft_fld_name.']', $r->_id ); ?>

    <br/>
    <br/>

    <?php $kounter = 2; ?>
  <?php endif; ?>
  <!-- / if label -->

  <!-- getting child -->
  <?php if( $r->hasChildren() ): ?>

    <div class="clr"></div>

  	<?php echo View::make('templates._editcmfchildform', [ 'records' => $r->children() ] ); ?>


    <div class="clr"></div>

    <?php $kounter = 2; ?>

  <?php endif; ?>
  <!-- / getting child -->

  <?php if($kounter % 2 == 0): ?>
    <div class="clr"></div>
  <?php endif; ?>

<?php endforeach; ?>
<!-- / loop for all features -->
